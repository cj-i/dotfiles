keybind = cmd+a>h=goto_split:left
keybind = cmd+a>j=goto_split:bottom
keybind = cmd+a>k=goto_split:top
keybind = cmd+a>l=goto_split:right

keybind = cmd+a>i=resize_split:left,5
keybind = cmd+a>o=resize_split:down,5
keybind = cmd+a>p=resize_split:up,5
keybind = cmd+a>[=resize_split:right,5

keybind = cmd+a>,=previous_tab
